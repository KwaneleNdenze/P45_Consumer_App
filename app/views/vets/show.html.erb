<div class="jumbotron jumbotron-fluid mt-5">
  <div class="container">
    <h1 class="display-4"> <%= @vet_pet["name"] %> - <%= @vet_pet["pet_type"] %> </h1>
    <p class="lead"></p>

  </div>
</div>


<% if @appointments.present? %>
<h3 class="mt-5">Vet Appointments</h3>

<table class="table mt-5">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Date</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>

    <% @appointments.select {|appointment| appointment["pet_id"] == params[:id].to_i }.each do |app| %>
    <tr>
      <td><%= app["date"] %></td>
    </tr>
  <% end%>
    
  </tbody>
</table>

<% end %>

<%= link_to 'Back', :back, class: 'btn btn-outline-warning' %>