<div class="jumbotron jumbotron-fluid mt-5">
  <div class="container">
    <h1 class="display-4">Pets Registered</h1>
    <p class="lead"></p>
  </div>
</div>
<table class="table mt-5">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Pet Name</th>
      <th scope="col">Pet Type</th>
      <th>Owner</th>
      <th>Email</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>

    <% @pets.each do |pet| %>
    <tr>
      <td><%= @pet_names.select { |pet_name| pet_name["id"] == pet["pet_id"].to_i }.map {|name| name["name"]}.first %></td>
      <td><%= @pet_names.select { |pet_name| pet_name["id"] == pet["pet_id"].to_i }.map {|name| name["pet_type"]}.first %></td>
      <td><%= @owner.select { |owner| owner["id"] == pet["user_id"].to_i }.map {|name| name["name"]}.first %></td>
      <td><%= @owner.select { |owner| owner["id"] == pet["user_id"].to_i }.map {|name| name["email"]}.first %></td>
      <td><%= link_to 'View Pet Details', vet_pet_path(@pet_names.select { |pet_name| pet_name["id"] == pet["pet_id"].to_i }.map {|name| name["id"]}.first), class: 'btn btn-sm btn-outline-info' %></td>
    </tr>
  <% end%>
    
  </tbody>
</table>
