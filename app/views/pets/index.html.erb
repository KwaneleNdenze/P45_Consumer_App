<div class="jumbotron jumbotron-fluid mt-5">
  <div class="container">
    <h1 class="display-4">Pets List</h1>
    <p class="lead"></p>
  </div>
</div>


<%= link_to 'Create New Pet', new_pet_path, class: 'btn btn-outline-success'%>

<% if @pets.present? %>
<table class="table mt-5">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Pet Type</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @pets.each do |pet| %>
    <tr>
      <td><%= pet["name"]%></td>
      <td><%= pet["pet_type"]%></td>
      <td><%= link_to 'Show', pet_path(pet["id"]), class: 'btn btn-sm btn-outline-info' %> | <%= link_to 'Edit', edit_pet_path(pet["id"]), class: 'btn btn-sm btn-outline-warning text-warning' %> | <%= link_to 'Destroy', pet_path(pet["id"]), class:'btn btn-sm btn-outline-danger', method: :delete, data: {confirm: "Are you sure you want to delete this pet?"} %> </td>
    </tr>
  <% end %>  
    
  </tbody>
</table>

<% else %>

<h1 class="mt-4">Pets List Empty</h1>

<% end %>
